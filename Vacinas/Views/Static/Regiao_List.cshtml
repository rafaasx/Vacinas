@{
    Layout = null;
}
<h2>Regiao</h2>
<p>
    <a href="#/Regiao/Create" class="btn btn-primary">Adicionar</a>
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>
                Nome
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        <tr ng-repeat="item in data">
            <td>
                {{ item.Nome }}
            </td>
            <td>
                <div class="btn-group">
                    <a ng-href="#/Regiao/Edit/{{item.Id}}" class="btn btn-info">Editar</a>
                    <a ng-href="#/Regiao/{{item.Id}}" class="btn btn-info">Detalhes</a>
                    <a ng-href="#/Regiao/Delete/{{item.Id}}" class="btn btn-info">Deletar</a>
                </div>
            </td>
        </tr>
    </tbody>
</table>
